{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "types": ["chrome", "node"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@main/*": ["../main/*"],
      "@test/*": ["../test/*"]
    }
  },
  "include": [
    "./**/*.ts"
  ]
}
