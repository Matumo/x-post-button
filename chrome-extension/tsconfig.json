{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "types": ["chrome"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/main/*"],
      "@test/*": ["src/test/*"]
    }
  },
  "include": [
    "./src/main/**/*.ts"
  ]
}
