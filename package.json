{
  "engines": {
    "node": "25.x"
  },
  "scripts": {
    "clean": "npm run clean:dist && npm run clean:test",
    "clean:dist": "rimraf dist",
    "clean:test": "rimraf test-results coverage",
    "check": "npm run lint && npm run check:type",
    "check:type": "npm run check:type:src && npm run check:type:test",
    "check:type:src": "tsc --noEmit -p ./chrome-extension/tsconfig.json",
    "check:type:test": "npm run build && npm run check:type:test:tsc",
    "check:type:test:tsc": "tsc --noEmit -p ./chrome-extension/src/test/tsconfig.json",
    "lint": "npm run lint:check",
    "lint:check": "eslint --config ./chrome-extension/eslint.config.mts ./chrome-extension --max-warnings=0",
    "lint:fix": "eslint --config ./chrome-extension/eslint.config.mts ./chrome-extension --max-warnings=0 --fix",
    "build": "npm run build:clean && npm run build:bundle && npm run build:zip",
    "build:clean": "npm run clean:dist",
    "build:bundle": "vite build --config ./chrome-extension/vite.config.ts",
    "build:zip": "zip -r ./dist/chrome-extension.zip ./dist/chrome-extension -x '*.DS_Store'",
    "test": "npm run test:unit",
    "test:unit": "vitest run --config ./chrome-extension/vitest.config.ts",
    "test:unit:coverage": "vitest run --config ./chrome-extension/vitest.config.ts --coverage",
    "all": "npm run clean && npm run check && npm run build && npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.1.32",
    "@types/node": "^25.0.3",
    "@types/pngjs": "^6.0.5",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "pngjs": "^7.0.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "ts-simple-logger": "git+https://github.com/Matumo/ts-simple-logger.git#v0.2.2"
  }
}
